{
  "trigger": {
    "trigger_type": "trigger.widget_tap",
    "params": {
      "widget_id": "voice_todo"
    }
  },
  "condition": null,
  "actions": [
    {
      "id": "a1",
      "action_type": "microphone.record",
      "params": {
        "max_seconds": 60,
        "output_uri": "sandbox://notes/voice_{{metadata.run_id}}.m4a"
      }
    },
    {
      "id": "a2",
      "action_type": "transform.speech_to_text",
      "params": {
        "media_uri": "{{state.record_uri}}"
      }
    },
    {
      "id": "a3",
      "action_type": "file.write",
      "params": {
        "uri": "sandbox://notes/todo.txt",
        "content": "- {{state.transcript}}"
      }
    }
  ]
}
